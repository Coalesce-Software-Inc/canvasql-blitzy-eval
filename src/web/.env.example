# API Configuration
# Base URL and settings for API endpoints
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=5000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
# Settings for real-time collaboration features
VITE_WEBSOCKET_URL=ws://localhost:3001
VITE_WEBSOCKET_RECONNECT_ATTEMPTS=5
VITE_WEBSOCKET_RECONNECT_INTERVAL=1000

# Application Information
# Basic metadata about the application
VITE_APP_NAME=ERD Visualization Tool
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Authentication Configuration
# Security settings for user authentication
VITE_AUTH_COOKIE_NAME=auth_token
VITE_REFRESH_TOKEN_NAME=refresh_token
VITE_TOKEN_EXPIRY=3600
VITE_COOKIE_SECURE=false
VITE_COOKIE_SAMESITE=lax

# Rate Limiting
# Request throttling configuration
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# Monitoring Configuration
# Error tracking and performance monitoring
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=1.0

# Security Headers
# Browser security configurations
VITE_ENABLE_CSP=true
VITE_CSP_REPORT_URI=/api/csp-report

# Feature Flags
# Toggle application features
VITE_ENABLE_PRESENCE=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_HISTORY=true